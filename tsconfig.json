{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017"
    ],
    "jsx": "react",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "paths": {
      "assets/*": ["./assets/*"],
      "components/*": ["./components/*"],
      "helpers/*": ["./helpers/*"],
      "pages/*": ["./pages/*"],
      "styles/*": ["./styles/*"]
    }
  },
  "include": [
    "src"
  ],
}
